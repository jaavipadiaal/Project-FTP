# Solo para IPv4
listen=YES
listen_ipv6=NO

# Mensaje bienvenida
ftpd_banner=--- Welcome to the FTP server of 'sistema.sol'---
dirmessage_enable=YES

# Permisos
anonymous_enable=YES
local_enable=YES
write_enable=YES
anon_upload_enable=NO

# Ancho de banda
max_clients=15
connect_from_port_20=YES
idle_session_timeout=720
# An√≥nimos: 2MB/s = 2097152 bytes
anon_max_rate=2097152
# Locales: 5MB/s = 5242880 bytes
local_max_rate=5242880

# Chroot
chroot_local_user=YES
chroot_list_enable=YES
chroot_list_file=/etc/vsftpd.chroot_list
allow_writeable_chroot=YES

# SSL/TLS
ssl_enable=YES
allow_anon_ssl=YES
force_local_data_ssl=YES
force_local_logins_ssl=YES
ssl_tlsv1=YES
ssl_sslv3=YES
rsa_cert_file=/etc/ssl/certs/example.test.pem
rsa_private_key_file=/etc/ssl/private/vsftpd.pem
require_ssl_reuse=NO